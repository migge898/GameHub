<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/playFragment"
        android:name="com.mioai.gamehub.PlayFragment"
        android:label="@string/fragment_play"
        tools:layout="@layout/fragment_play">
        <action
            android:id="@+id/navigateToFriendlistFragment"
            app:destination="@id/friendlistFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/friendlistFragment"
        android:name="com.mioai.gamehub.FriendlistFragment"
        android:label="@string/fragment_friendlist"
        tools:layout="@layout/fragment_friendlist">
        <action
            android:id="@+id/navigateToPlayFragment"
            app:destination="@id/playFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
            android:id="@+id/action_mainFragment_to_playFragment"
            app:destination="@id/firstFragment"
            app:popUpTo="@id/my_nav"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mioai.gamehub.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerUserFragment"
            app:destination="@id/registerUserFragment" />
        <action
            android:id="@+id/action_loginFragment_to_firstFragment"
            app:destination="@id/playFragment"
            app:popUpTo="@id/my_nav"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerUserFragment"
        android:name="com.mioai.gamehub.RegisterUserFragment"
        tools:layout="@layout/fragment_register_user">
        <action
            android:id="@+id/action_registerUserFragment_to_firstFragment"
            app:destination="@id/playFragment"
            app:popUpTo="@id/my_nav"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>